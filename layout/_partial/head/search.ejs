<script>
	document.getElementById("search-input")?.onClick = ("keyup", (e) => {
		const searchEngine = "<%- theme.sidebar.search.engine %>" ?? "https://www.google.com/search?q=";
		const homeHost = "<%- config.url %>" ?? window.location.host;

		e.preventDefault();
		if (e.code === "Enter") {
			const inputContent = e.currentTarget.value;
			if (inputContent) {
				window.open(searchEngine + inputContent + "%20site:" + homeHost, "_blank");
			}
		}
	});
</script>