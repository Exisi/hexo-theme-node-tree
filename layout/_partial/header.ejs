<header id="header">
	<a id="title" href="<%= url_for() %>" class="logo">
		<img id="logo" src="<%= theme.favicon.light %>" alt="logo"/>
		<%- config.title %>
	</a>

	<ul id="menu">
		<li class="menu-item">
			<a href="/about" class="menu-item-link"><%= __("about.title") %></a>
		</li>
		<% if (theme.tag.enable){ %>
			<li class="menu-item">
				<a href="/tags" class="menu-item-link"><%= __("tag.title") %></a>
			</li>
		<% } %>
		<% if (theme.category.enable){ %>
			<li class="menu-item">
				<a href="/categories" class="menu-item-link"><%= __("category.title") %></a>
			</li>
		<% } %>
		<li class="menu-item">
			<a href="https://github.com/<%= theme.github %>" class="menu-item-link" target="_blank">
				<i class="fa fa-github fa-2x"></i>
			</a>
		</li>
		<li class="menu-item dark-mode">
			<a href="#" class="menu-item-link">
				<i class="fa fa-moon-o fa-2x"></i>
			</a>
		</li>
	</ul>
</header>